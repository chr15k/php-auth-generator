{
    "name": "chr15k/php-auth-generator",
    "description": "Generate authentication tokens",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Keller",
            "email": "ctk8501@gmail.com"
        }
    ],
    "keywords": [
        "http",
        "cli",
        "php",
        "generator",
        "auth",
        "jwt",
        "api"
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "laravel/pint": "^1.20.0",
        "pestphp/pest": "^2.36|^3.7.4",
        "pestphp/pest-plugin-type-coverage": "^2.8.7|^3.2.3",
        "phpstan/phpstan": "^1.12.16",
        "rector/rector": "^1.2.10",
        "symfony/var-dumper": "^7.2.0"
    },
    "autoload": {
        "psr-4": {
            "Chr15k\\AuthGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "scripts": {
        "refactor": "rector",
        "lint": "pint",
        "tidy": [
            "@lint",
            "@refactor",
            "@lint"
        ],
        "test:refactor": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --coverage --exactly=100.0",
        "test": [
            "@test:refactor",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "suggest": {
        "paragonie/sodium_compat": "Support EdDSA (Ed25519) signatures when libsodium is not present",
        "ext-sodium": "Support EdDSA (Ed25519) signatures"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
